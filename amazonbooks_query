CREATE DATABASE AMAZONBOOKS;
USE AMAZONBOOKS;
CREATE TABLE BOOKS(
Rank_ INT PRIMARY KEY,
Booktitle VARCHAR(150),
BookPrice DECIMAL(7,2),
Rating  DECIMAL(2,1),
Author VARCHAR(50),
YearOfPublication INT,
Genre VARCHAR(150)
);
